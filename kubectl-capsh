set -eou pipefail

################################################################################
POD=$@
CAPSH_STATIC_BIN=/home/dcasati/hacks/libcap2-2.25/progs/capsh
################################################################################

usage() {
    echo "usage: ${0##*/} [POD]"
    exit 1
}


if [ -z "${POD}" ]
then
	echo "You need to specify a Pod to run this command"
	exit 2
fi

kubectl cp ${CAPSH_STATIC_BIN} ${POD}:/capsh
kubectl exec ${POD} -- /capsh --print
